---
// Import the global.css file here so that it is included on
// all pages through the use of the <Layout /> component.
import "../styles/global.css";
import Header from "@components/Header.astro";
import { ThemeToggle } from "@components/ThemeToggle";
import Link from "@components/ui/Link.astro";
import { SITE_TITLE } from "src/config";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = "/placeholder-social.jpg" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const today = new Date();
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- PWA -->
    <meta name="theme-color" content="#f8fafc" />
    <script is:inline>
      // run inline (to avoid FOUC)
      // on page load: add "dark" class to the html element)
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
        document
          .querySelector('meta[name="theme-color"]')
          .setAttribute("content", "#0B1120");
      }
    </script>
  </head>
  <body
    class="flex flex-col items-stretch break-words bg-white text-zinc-900 dark:bg-zinc-900 dark:text-neutral-50"
  >
    <div class="mx-auto w-full max-w-7xl px-5 md:px-10">
      <Header />
    </div>
    <main class="mx-auto w-full max-w-7xl flex-1 px-5 md:px-10">
      <slot />
    </main>
    <div class="px-5 md:px-10">
      <footer class="relative p-6 text-center">
        Copyright &copy; {today.getFullYear()}
        <Link href="https://www.uridge.com">{SITE_TITLE}</Link>.
        <div class="absolute right-0 top-0 pt-6">
          <!-- <ThemeToggle client:media="(min-width: 768px)" /> -->
          <div class="max-md:hidden">
            <ThemeToggle client:load />
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
