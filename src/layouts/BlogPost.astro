---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article>
    {
      frontmatter.heroImage && (
        <img width={720} height={360} src={frontmatter.heroImage} alt="" />
      )
    }
    <h1 class="mt-1 text-3xl">{frontmatter.title}</h1>
    {frontmatter.pubDate && <time>{frontmatter.pubDate}</time>}
    {
      frontmatter.updatedDate && (
        <div>
          Last updated on <time>{frontmatter.updatedDate}</time>
        </div>
      )
    }
    <hr class="my-4 border-t border-neutral-200" />
    <div class="markdown">
      <slot />
    </div>
  </article>
</Layout>
