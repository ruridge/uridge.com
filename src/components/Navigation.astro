---
import { Icon } from "astro-icon";

const links = [
  { href: "/", label: "Home" },
  { href: "/work", label: "Work" },
  { href: "/posts", label: "Posts" },
  { href: "/uses", label: "Uses" },
];
---

<nav class="mx-auto flex max-w-2xl justify-between">
  {
    links.map(({ href, label }) => (
      <a class="py-2" href={href}>
        {label}
      </a>
    ))
  }
  <a
    href="https://github.com/ruridge/uridge.com"
    class="inline-flex flex-row items-center py-2"
  >
    <Icon class="mr-1.5 h-4 w-4" name="akar-icons:github-fill" />
    <span>Source</span>
    <Icon class="h-4 w-4" name="ci:external-link" />
  </a>
</nav>
