---
const SIZE_CLASS = {
  p: "text-lg",
  h1: "text-5xl font-extrabold",
  h2: "text-3xl font-bold",
  h3: "text-xl",
};
type TextSizes = keyof typeof SIZE_CLASS;

export interface Props {
  as?: TextSizes | "span";
  size?: TextSizes;
}

const { as = "p", size } = Astro.props;
const Element = as;
const computedSize = size ?? (as !== "span" ? as : "p");
const defaultClasses = [];
defaultClasses.push(SIZE_CLASS[computedSize]);
---

<Element class={defaultClasses.join(" ")}><slot /></Element>
